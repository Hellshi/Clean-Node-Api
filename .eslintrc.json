{
    "env": {
        "browser": false,
        "node": true,
        "es6": true,
        "jest/globals": true
    },

    "extends": [
        "airbnb-base", "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion":2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint", "jest"
    ],
    "rules": {
      "class-methods-use-this":"off",
      "no-unused-expressions":"warn",
      "import/prefer-default-export": "off",
      "linebreak-style":"off",
      "no-unused-vars":"warn",
    "indent": "off",
    "@typescript-eslint/indent": ["error", 2],

   "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
   "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["error"]
},
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
