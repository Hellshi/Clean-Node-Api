{
    "env": {
        "browser": false,
        "node": true,
        "es6": true,
        "jest/globals": true
    },

    "extends": [
        "airbnb-base", "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion":2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint", "jest", "mongodb"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "no-restricted-syntax": "off",
      "consistent-return":"off",
      "object-curly-newline": ["error", {"multiline": true}],
      "class-methods-use-this":"off",
      "no-unused-expressions":"warn",
      "no-console": "warn",
      "import/prefer-default-export": "off",
      "no-unused-vars":"warn",
    "indent": "off",
    "@typescript-eslint/indent": ["error", 2],

   "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
   "no-shadow": "off",
    "@typescript-eslint/no-shadow": ["off"]
},
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
